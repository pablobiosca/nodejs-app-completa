<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id_link}}" method="post">

                        <div class="form-group">
                            <input value="{{link.title}}" type="text" class="form-control" name="title" placeholder="title" autofocus>
                        </div>
                        <div class="form-group">
                            <input value="{{link.url}}" type="url" class="form-control" name="url" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="description" rows="2" placeholder="description">{{ link.description }}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>